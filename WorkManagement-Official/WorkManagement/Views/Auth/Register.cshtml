@{
	Layout = "_LayoutEmpty";
}
<style>
    body{
		background-color: #f13b6c;
    }
</style>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body px-5 py-3 text-center">

                        <h3 class="mb-5">Registration</h3>
                        <form id="reg-from" >

                            <div class="form-outline mb-2">
                                <label style="text-align:start;width: 100%;">First Name:</label>
                                <input placeholder="Enter first name" type="text" name="fname" class="form-control form-control-md" />
                            </div>

                            <div class="form-outline mb-2">
                                <label style="text-align:start;width: 100%;" >Last Name:</label>
                                <input placeholder="Enter last name" type="text" name="lname" class="form-control form-control-md" />
                            </div>

                            <div class="form-outline mb-2">
                                <label style="text-align:start;width: 100%;">Email:</label>
                                <input placeholder="Enter email" type="email" name="email" class="form-control form-control-md" />
                            </div>

                            <div class="form-outline mb-2">
                                <label style="text-align:start;width: 100%;">Password:</label>
                                <input placeholder="Enter password" autocomplete="new-password" type="password" name="password" class="form-control form-control-md" />
                            </div>

                            <div class="form-outline mb-2">
                                <label style="text-align:start;width: 100%;" >Repeat Password:</label>
                                <input placeholder="Re-enter password" type="password" name="re-password" class="form-control form-control-md" />
                            </div>

                            <hr class="mt-4 mb-2">
                            <p class="text-secondary" style="font-size:11px;">
                                By clicking Register you agree on our <a href="#" class="text-primary">Privacy Policy</a>
                            </p>
                            <button id="btn-login" class="btn btn-lg btn-block" type="submit">Submit</button>
                            <p class="text-secondary my-2" style="font-size:13px;">
                                Have already an account ? <a href="/auth/login" class="text-primary ml-1">Login here</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
