@using DataAccess.Entities;

@{
    List<Account> users = ViewBag.Users;
}
<style>
    .btn-custom-danger {
        padding: 8px 14px;
        background: #ED2B2A;
        color: #fff;
        border:  none;
        outline: none;
        cursor: pointer;
    }
</style>
<div class="container mt-5 mb-5">
    <h1 class="mt-5 mb-5">User Manager</h1>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in users)
            {
                <tr>
                    <th scope="row">@user.AccountKey</th>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>
                        <button class="btn-custom-danger btn_delete" id="ac-@user.AccountKey">Delete</button>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

