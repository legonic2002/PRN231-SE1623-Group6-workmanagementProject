@using DataAccess.Entities;
@{
    var company = ViewBag.Company as Company;
}


<style>
    * {
        margin:  0;
        padding: 0;
        box-sizing: border-box;
    }

    .wrap-form-infor {
        display:  flex;
        justify-content: center;
        align-items: center;
        background: #F5F5F5;
        min-height: 70vh;
        margin: 40px 0;
    }

    #form-update-infor  {
        border-radius: 10px;
        background: #ffffff;
        padding: 25px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        width: 50%;
    }

    .btn-toggle-change-password {
        padding: 15px 20px;
        width: fit-content;
        background: #79E0EE;
        cursor: pointer;
    }

    #wrap-password {
        display: none;
    }

    .active {
        display: block!important;
    }

    .my-button {
        width: 100%;
        background-color: #79E0EE;
        color: #fff; /* Set the text color to white (you can adjust this as needed) */
        padding: 10px; /* Adjust padding as per your design */
        border: none; /* Remove border if you don't want any */
        border-radius: 5px; /* Add rounded corners as per your design */
        cursor: pointer; /* Show pointer cursor on hover */
        /* Add any other desired styles here, like font-size, font-weight, etc. */
    }
</style>
<div class="container">
    <h1 class="mt-5 mb-5">Add New Company</h1>
</div>

<div class="wrap-form-infor">
    <form id="form-update-infor">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" id="name" placeholder="Company Name" value="@company.Name">
            <input type="text" class="form- d-none" id="id" placeholder="Company Name" value="@company.CompanyKey">
        </div>
        <div class="form-group">
            <label>Location</label>
            <input type="text" class="form-control" id="location" placeholder="Location" value="@company.Location">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="email" class="form-control" id="description" placeholder="Description" value="@company.Description">
        </div>
        <div class="form-group">
            <button class="form-control btn" id="btn_add">Add New Company</button>
        </div>
    </form>
</div>
<script>
    const wrapPassword = document.querySelector("#wrap-password");
    const handleToggleChangePassword = () => {
        wrapPassword.classList.toggle("active");
    };
</script>